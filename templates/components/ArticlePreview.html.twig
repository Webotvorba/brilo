<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="{{ path('post.show', {'id': post.id}) }}">
                        #{{ post.id }} {{ post.title }}
                    </a>
                </h5>
                <p class="card-text">
                {{ post.body|slice(0, 80) }}{% if post.body|length > 80 %}...{% endif %}
                </p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
</div>
